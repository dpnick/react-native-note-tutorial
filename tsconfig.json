{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@navigation/*": [
        "./src/navigation/*"
      ],
      "@contexts/*": [
        "./src/contexts/*"
      ],
      "@models/*": [
        "./src/models/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ]
    }
  },
  "extends": "expo/tsconfig.base"
}
